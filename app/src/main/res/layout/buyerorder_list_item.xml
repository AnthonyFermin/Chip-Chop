<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="1dp"
    android:layout_margin="5dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/seller_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_design"
        android:text="Name of Seller" />

    <TextView
        android:id="@+id/order_timestamp_tv"
        style="@style/text_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Bought"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/seller_name_tv"/>

    <TextView
        android:id="@+id/order_cost_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_timestamp_tv"
        android:text="TOTAL COST" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/order_cost_tv"
        android:id="@+id/divider"/>

    <TextView
        android:id="@+id/delivery_method_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:text="DELIVERY METHOD" />

    <TextView
        android:id="@+id/seller_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_method_tv"
        android:text="BUYER ADDRESS" />



</RelativeLayout>

    </android.support.v7.widget.CardView>