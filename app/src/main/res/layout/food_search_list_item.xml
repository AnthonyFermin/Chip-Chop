<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    android:orientation="horizontal">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/food_image"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:id="@+id/food_quantity_tv"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/food_quantity_tv"
            android:gravity="center"
            android:id="@+id/food_price_tv"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/food_image"
                android:layout_toLeftOf="@id/food_price_tv"
                android:id="@+id/food_name_tv"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/food_image"
                android:layout_toLeftOf="@id/food_quantity_tv"
                android:id="@+id/food_description_tv"
                android:padding="8dp"/>

        </RelativeLayout>



</android.support.v7.widget.CardView>