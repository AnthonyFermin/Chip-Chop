<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="madelyntav.c4q.nyc.chipchop.fragments.Fragment_Buyer_SellerProfile"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COOKING STATUS"
        android:gravity="center_horizontal"
        android:textSize="13sp"
        style="@style/text_design"
        android:textStyle="bold"/>

    <ToggleButton
        android:id="@+id/cooking_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/github"
            app:border_width="2dp"
            app:border_color="#FFF"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/seller_name"
                android:text="Github Cat"
                style="@style/text_design"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#8bc34a"
                android:text="â— Currently Cooking"
                android:padding="2dp"
                android:textSize="18sp"
                android:id="@+id/cooking_statusTV"
                android:gravity="center" />




        </LinearLayout>

    </LinearLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELIVERY"
        android:id="@+id/switch1"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/store_name"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Street Address"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <EditText
            android:id="@+id/apt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Apt"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="City"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:layout_weight="4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=", NY "
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <EditText
        android:id="@+id/zipcode"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:hint="Zipcode"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"
            android:id="@+id/phone_number"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE CHANGES"
        style="@style/button_design"
        android:id="@+id/save_button"/>




</LinearLayout>
