<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/food_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/food2"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:src="@drawable/gradient_shape"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>



    <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/food_image"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:src="@drawable/chipchop"-->
        <!--app:border_color="#FFF"-->
        <!--app:border_width="2dp"-->
        <!--android:layout_marginLeft="15dp"/>-->





        <TextView
            android:id="@+id/store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|bottom"
            android:text="name"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            style="@style/text_design"
            android:layout_alignParentBottom="true"
            android:textSize="25sp" />



        <RatingBar
            android:id="@+id/rating_bar"
            style="@style/RatingBar"
            android:isIndicator="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:numStars="5"
            android:rating="5"
            android:layout_above="@+id/store_name"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/store_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|start"
            android:padding="8dp"
            android:textColor="#FFF"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|start"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vegan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:visibility="gone"
                android:src="@drawable/vegan" />

            <ImageView
                android:id="@+id/gluten_free"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:visibility="gone"
                android:src="@drawable/glutenfree" />

            <ImageView
                android:id="@+id/dairy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:visibility="gone"
                android:src="@drawable/dairy" />

            <ImageView
                android:id="@+id/nut"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:visibility="gone"
                android:src="@drawable/nut" />

            <ImageView
                android:id="@+id/egg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:visibility="gone"
                android:src="@drawable/egg" />

            <ImageView
                android:id="@+id/shellfish"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:visibility="gone"
                android:src="@drawable/shellfish" />


        </LinearLayout>

    <TextView
        android:id="@+id/distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="0.5 mi"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:padding="10dp"/>

</RelativeLayout>
