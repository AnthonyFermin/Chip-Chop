<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="1dp"
    android:layout_margin="5dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/order_id_tv"
        style="@style/text_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order ID#"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_cost_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_id_tv"
        android:text="TOTAL COST" />

    <TextView
        android:id="@+id/total_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_cost_tv"
        android:text="10" />

    <TextView
        android:id="@+id/buyer_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_item_tv"
        android:text="Distance from seller" />



    <TextView
        android:id="@+id/buyer_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Name of Buyer" />

</RelativeLayout>

</android.support.v7.widget.CardView>
