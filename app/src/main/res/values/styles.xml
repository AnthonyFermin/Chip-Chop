<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="colorAccent">#D51F27</item>
        <item name="colorPrimaryDark">#AA191F</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="button_design">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="text_design">
        <item name="android:textColor">#D51F27</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_star_filled</item>
        <item name="android:minHeight">21dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>


</resources>
